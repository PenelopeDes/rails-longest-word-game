<h1><%= "New game" %></h1>

<% @letters.each do |letter| %>
<%= letter %>
<% end %>

<form class="form-group" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="form-control" type="text" name="answer" placeholder="What is your best answer?">
  <input type="submit" value="Submit!"class="btn btn-primary">
</form>
