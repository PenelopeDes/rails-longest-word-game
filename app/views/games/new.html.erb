<h1><%= "New game" %></h1>

<div class="d-flex justify-content-center">
  <% @letters.each do |letter| %>
    <p class = "btn btn-primary m-2"><%= letter %></p>
  <% end %>
</div>

<form class="form-group" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, @start_time %>
  <input class="form-control" type="text" name="answer" placeholder="What is your best answer?">
  <input type="submit" value="Submit!"class="btn btn-primary m-2">
</form>
